<div class="container-treehouse">
  <h1>Add a Treehouse</h1>
  <%= simple_form_for @treehouse, html: {multipart: true} do |f| %>
    <%= f.input :name, label: "Name" %>
    <%= f.input :description, label: "Description", as: :text %>
    <%= f.input :price_per_day, label: "Price per day in â‚¬", as: :integer %>
    <%= f.input :cancel_days, label: "Cancellation period in days", as: :integer %>
    <%= f.input :address, label: "Address" %>
    <% if @treehouse.errors.messages[:address].any? %>
      <p class="mt-0 text-danger" style="font-size: small">Address <%= @treehouse.errors.messages[:address].first %></p>
      <% end %>
    <%= f.input :capacity, label: "Capacity", as: :integer %>


    <label class="btn btn-success my-0 ml-0 mr-2">Upload image<input type="file" style="display: none;" name="treehouse[photo]" id="treehouse_photo"></label>
    <%= f.submit 'Add treehouse', class: "btn btn-success" %>

  <% end %>

</div>
